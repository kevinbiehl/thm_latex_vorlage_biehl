% ----------
% Titelseite
% Die erste Seite im Dokument 
% ----------

% Überschreiben des \maketitle Befehls
\renewcommand{\maketitle}{
  \begin{titlepage}

    % in thmpagestyles.sty definierten fancypagestyle nehmen
    %   -> THM Banner im header 
    \thispagestyle{titlepage}

    % mittig ausrichten
    \begin{center}

      % einen halben Zentimeter Abstand
      %   -> Leerzeichen am Anfang/Ende einer Seite werden automatisch abgeschnitten
      %      da noch kein Inhalt auf der Seite vorhanden ist,
      %      muss hier \vspace* verwendet werden
      \vspace*{1.0cm}

      % Art des Dokumentes einfügen
      {\scshape\Large{\reporttype}\par}

      \vspace{0.5cm}
      
      % Unterart einfügen
      \large{\reportsubtype}
  
      
      
      % Titel & Untertitel
      % keine Einrückung 
      \noindent\Huge{\textbf{\MyTitle}} \\
      \vspace{1.5cm}
      
      % Studenten Tabelle 
      \normalsize{vorgelegt von} \vspace{0.1cm} \\
      \Large{\textbf{\student}} \\
      \vspace{0.3cm}
      \small
      \begin{tabular}{c}
        Studiengang: \studiengang \\
        Matrikelnummer: \matnr \\
      \end{tabular}

      \vspace{1.5cm}
      
      % ---- Unternehmen ----
      \Large{Partnerunternehmen}\par
      \large\textbf{\firma} \\
      \small{\firmaStrasse, \firmaOrt}

      \vspace{1.5cm}

      % Betreuer Tabelle       
      \small\begin{tabular}{ll}
        Hochschulbetreuer/-in:    	& \professor \\
        Unternehmensbetreuer/-in: 	& \betreuer \\
        Fachbetreuer/-in:			      & \fachBetreuer \\
        %Eingereicht am:             & \abgabedat \\
      \end{tabular}
      
      \vfill
	
      % ---- Semester / Datum ----
      \normalsize \MySemester, \abgabedat

    \end{center}
  \end{titlepage}
}